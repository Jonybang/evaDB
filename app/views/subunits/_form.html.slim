= simple_nested_form_for(@subunit) do |f|
  = f.error_notification

  .form-inputs
      = uni_input f, "name"
      = uni_ref_input f, @subunit, "organization", @subunit.organization || @subunit.build_organization
      = uni_ref_input f, @subunit, "rooms", @subunit.rooms || @subunit.build_rooms
      = uni_ref_input f, @subunit, "equips", @subunit.equips || @subunit.build_equips

  .form-actions
    = f.button :submit
